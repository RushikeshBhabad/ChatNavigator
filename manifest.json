{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Navigator",
  "version": "1.0.0",
  "description": "Navigate through your ChatGPT conversation with a sidebar showing all prompts",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}